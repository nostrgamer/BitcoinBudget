<Window x:Class="BitcoinOnBudgetDesktop.Presentation.DiagnosticWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Diagnostic Results" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Bitcoin Budget Desktop - System Diagnostic" 
                       FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="SummaryText" 
                       FontSize="14" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
        
        <!-- Results -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="ResultsText" FontFamily="Consolas" FontSize="12" 
                       Padding="10" Background="#F5F5F5" TextWrapping="Wrap"/>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Run Again" x:Name="RunAgainButton" 
                    Click="RunAgainButton_Click" Margin="0,0,10,0" Padding="20,10"/>
            <Button Content="View Logs" x:Name="ViewLogsButton" 
                    Click="ViewLogsButton_Click" Margin="0,0,10,0" Padding="20,10"/>
            <Button Content="Continue Anyway" x:Name="ContinueButton" 
                    Click="ContinueButton_Click" Margin="0,0,10,0" Padding="20,10"/>
            <Button Content="Exit" x:Name="ExitButton" 
                    Click="ExitButton_Click" Padding="20,10"/>
        </StackPanel>
    </Grid>
</Window> 